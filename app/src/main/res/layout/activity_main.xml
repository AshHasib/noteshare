<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
        <!--This linear layout will contain the child linear layouts containing the grids-->


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:background="@drawable/dashboard_gradient">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="DEPARTMENTS"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />

                <GridLayout
                    android:layout_margin="20dp"
                    android:rowCount="3"
                    android:columnCount="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v7.widget.CardView
                        android:id="@+id/cseBoard"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="8dp"
                        android:padding="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:maxWidth="20dp"
                                android:maxHeight="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_cse"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CSE"
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:layout_gravity="center_horizontal"
                                />




                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/eeeBoard"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="8dp"
                        android:padding="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:maxWidth="20dp"
                                android:maxHeight="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_eee"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EEE"
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:layout_gravity="center_horizontal"
                                />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/ceBoard"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="8dp"
                        android:padding="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_civ"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Civil"
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:layout_gravity="center_horizontal"
                                />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/bbaBoard"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="8dp"
                        android:padding="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_english"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eng."
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:layout_gravity="center_horizontal"
                                />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/engBoard"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="8dp"
                        android:padding="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_bba"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BBA"
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:layout_gravity="center_horizontal"
                                />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="8dp"
                        android:padding="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"

                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_signout"
                                android:padding="8dp"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oth."
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

</android.support.v4.widget.DrawerLayout>