<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPdfActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/uploadPdfToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <LinearLayout
        android:orientation="vertical"
        android:background="#3C3F41"
        android:layout_below="@+id/uploadPdfToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/btnSelectPdf"
            android:layout_margin="26dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select PDF"
                android:padding="8dp"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp"
                />


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/nameOfPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of file"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_marginBottom="30dp"
            />




        <android.support.v7.widget.CardView
            android:id="@+id/btnUploadPdf"
            android:layout_margin="26dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:padding="8dp"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp"
                />


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/progressPdfUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress : None"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_marginBottom="30dp"
            />



        <ProgressBar
            android:layout_marginTop="30dp"
            android:id="@+id/progressPdfUploadP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>